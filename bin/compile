#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -o errexit    # always exit on error
set -o pipefail   # don't ignore exit codes when piping output
set -o nounset    # fail on unset variables

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

source $BP_DIR/lib/environment.sh
export_env_dir "$ENV_DIR"

echo "Creating .npmrc file"

echo "" >> $BUILD_DIR/client/.npmrc
echo "@branchpolitics:registry=https://node.bit.cloud" >> $BUILD_DIR/client/.npmrc
echo "//node.bitsrc.io/:_authToken=$BIT_NPM_AUTH_TOKEN" >> $BUILD_DIR/client/.npmrc
echo "//node.bit.cloud/:_authToken=$BIT_NPM_AUTH_TOKEN" >> $BUILD_DIR/client/.npmrc

cat $BUILD_DIR/client/.npmrc
